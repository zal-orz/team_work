
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.head{
  margin: 20rpx;
  font-size: 70rpx;
  color: #000000;
  text-align: center;
}
.head h1{
  font-style: italic;
}
.zwjs{
  position: relative;
  height: 500rpx;
}
.zwjs h1{
  font-size: 50rpx;
  font-weight: 900;
  color: rgb(7, 40, 131);
  position: absolute;
  left: 30rpx;
  top:10rpx;
}
.zwjs image{
  position: absolute;
  top: 70rpx;
  left: 10rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
  float: left;
  width: 30%;
  border:1px solid #ccc;
  box-sizing: border-box;
}
.block1{
  float: right;
  width: 50%;
  border:1px solid rgb(255, 0, 0);
  box-sizing: border-box;
  margin: 30rpx;
}
.font1{
  font-size:30rpx;
  font-weight: 600;
  line-height: 100rpx;
}
.clear-fix{
